{
  "devDependencies": {
    "@changesets/cli": "^2.4.1",
    "conventional-changelog-cli": "^2.0.31",
    "lerna": "^3.20.2"
  },
  "name": "lernaci",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "npx git-cz",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "test": "lerna run test",
    "clean": "lerna clean",
    "clean:build": "lerna exec -- rimraf lib",
    "ls": "lerna ls",
    "publish-ci": "lerna publish from-package -y --no-verify-access"
  }
}
